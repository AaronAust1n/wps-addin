<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="ribbon.OnAddinLoad">
    <ribbon startFromScratch="false">
        <tabs>
            <tab id="AI助手" label="AI助手">
                <group id="AIFunctions" label="AI功能">
                    <button id="btnContinueText" label="文本续写" onAction="ribbon.OnAction" getImage="icons.GetImage" size="large"/>
                    <button id="btnProofreadText" label="文本校对" onAction="ribbon.OnAction" getImage="icons.GetImage" size="large"/>
                    <button id="btnPolishText" label="文本润色" onAction="ribbon.OnAction" getImage="icons.GetImage" size="large"/>
                    <button id="btnDocumentQA" label="文档问答" onAction="ribbon.OnAction" getImage="icons.GetImage" size="large"/>
                    <button id="btnSummarizeDoc" label="全文总结" onAction="ribbon.OnAction" getImage="icons.GetImage" size="large"/>
                </group>
                <group id="AISettings" label="设置">
                    <button id="btnSettings" label="API设置" onAction="ribbon.OnAction" getImage="icons.GetImage" size="large"/>
                    <button id="btnHistory" label="历史记录" onAction="ribbon.OnAction" getImage="icons.GetImage" size="large"/>
                    <button id="btnHelp" label="帮助" onAction="ribbon.OnAction" getImage="icons.GetImage" size="large"/>
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI> 